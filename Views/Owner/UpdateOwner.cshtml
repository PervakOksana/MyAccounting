@model Owner
<div class="navbar">
    @if (User.Identity.IsAuthenticated)
    {
        <a style="color: white;">@User.Identity.Name</a>
        <a asp-controller="Home" asp-action="IndexMain">&#9668</a>
        <a asp-controller="Owner" asp-action="Index">Мои организации</a>
        <a asp-controller="Client" asp-action="Index">Контрагенты</a>
        <a asp-controller="Service" asp-action="Index">Прайс</a>

        <a asp-controller="Account" asp-action="Logoutt">Выход</a>
        <!--<form method="post" asp-controller="Account" asp-action="Logout" class="right">
        <input type="submit" value="Выход" /></form>-->

    }
    else
    {
        <a asp-controller="Account" asp-action="Login" class="right">Вход</a>
        <a asp-controller="Account" asp-action="Register" class="right">Регистрация</a>
    }
</div>
<h3 class="p-2 bg-secondary text-white text-center">Мои организации</h3>
<form asp-action="UpdateOwner" method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Name">Наименование</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FullName">Полное наименование</label>
        <input asp-for="FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IdNumber">УНП</label>
        <input asp-for="IdNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Adress">Адрес</label>
        <input asp-for="Adress" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Phone">Телефон</label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Account">Расчетный счет</label>
        <input asp-for="Account" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CEO">Руководитель</label>
        <input asp-for="CEO" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-secondary" type="submit">Сохранить</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>